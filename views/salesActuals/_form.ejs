<div class="modal fade" id="addSalesActual" tabindex="-1" role="dialog" data-backdrop="static">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content">
            <form action="/salesActuals" method="post" class="salesActualForm" enctype="multipart/form-data">

                <div class="modal-header">
                    <h5 class="modal-title t-primary salesActualForm-title">
                        New Sale Actual
                    </h5>
                    <button type="button" class="btn btn-outline-danger btn-sm close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                </div>
                <div class="modal-body">
                    <div class="row">

                        <div class="col-6">
                            <label for="DATE">DATE</label>
                            <input type="date" class="form-control salesActualForm-DATE" name="DATE" required maxlength="100" />
                        </div>
                        <div class="col-6">
                            <label for="supplier_id">Supplier ID</label>
                            <input type="text" class="form-control salesActualForm-supplier_id" name="supplier_id" placeholder="Saisir le Supplier ID" required maxlength="255" />
                        </div>
                        

                    </div>
                    <div class="row">
                        <div class="col-6">
                            <label for="sub_total">Sub Total</label>
                            <input type="text" class="form-control salesActualForm-sub_total" name="sub_total" placeholder="Saisir le Sub Total" />
                        </div>
                        <div class="col-6">
                            <label for="no_transection">No Transection</label>
                            <input type="text" class="form-control salesActualForm-no_transection" name="no_transection" placeholder="No Transection" required maxlength="255"/>
                        </div>
                    </div>

                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">
                            <i class="ic-cross"></i> Close
                        </button>
                    <button type="submit" class="btn btn-primary">
                            <i class="ic-check"></i> Save
                            Changes
                        </button>
                </div>
            </form>
        </div>
    </div>
</div>
